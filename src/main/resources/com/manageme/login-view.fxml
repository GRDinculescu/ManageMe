<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" prefHeight="500" prefWidth="300"
      spacing="10"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.manageme.controllers.LoginController">

    <!-- LOGIN FORM -->
    <VBox fx:id="loginPane" alignment="CENTER" spacing="10">
        <padding>
            <Insets top="20" right="20" left="20" bottom="20"/>
        </padding>


        <ImageView fx:id="imgLoginLogo" fitHeight="200" fitWidth="200"
                   pickOnBounds="true" preserveRatio="true">
            <Image url="@../../drawable/almacen.png"/>
        </ImageView>

        <Label fx:id="lblUser" text="Usuario"/>
        <TextField fx:id="tfdUser" maxWidth="300"/>

        <Label fx:id="lblPasswd" text="Contrase침a"/>
        <TextField fx:id="tfdPasswd" maxWidth="300"/>

        <Button fx:id="btnLogin" text="Iniciar Sesi칩n" onAction="#onLogin"/>

        <Hyperlink text="He olvidado mi contrase침a"
                   onAction="#onForgetPassword"/>
    </VBox>

    <!-- FORGOT PASSWORD FORM -->
    <VBox fx:id="forgotPane" alignment="CENTER" spacing="10"
          visible="false" managed="false">
        <padding>
            <Insets top="20" right="20" left="20" bottom="20"/>
        </padding>


        <ImageView fitHeight="200" fitWidth="200"
                   pickOnBounds="true" preserveRatio="true">
            <Image url="@../../drawable/almacen.png"/>
        </ImageView>

        <Label text="Usuario"/>
        <TextField fx:id="tfdUserForget" maxWidth="300"/>

        <Button text="Enviar" mnemonicParsing="false"/>

        <Hyperlink text="Soy bobo y he recordado la contrase침a!"
                   onAction="#onRememberedPassword"/>
    </VBox>
</VBox>
