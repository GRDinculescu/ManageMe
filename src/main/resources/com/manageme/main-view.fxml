<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.image.Image?>
<VBox minHeight="600" minWidth="800" prefHeight="1080" prefWidth="1920" stylesheets="@help-style.css"
      xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.manageme.controllers.HelpController">
    <BorderPane layoutX="10.0" layoutY="100.0" prefWidth="200.0" style="-fx-background-color: cyan;">
        <padding>
            <Insets top="20" bottom="20" left="20" right="20"/>
        </padding>
        <left>
            <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../../drawable/logo_dev.png" />
            </ImageView>
        </left>
        <right>
            <HBox spacing="15.0" style="-fx-background-color: green;">
                <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../../drawable/notifications.png" />
                </ImageView>
                <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../../drawable/help.png" />
                </ImageView>
                <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../../drawable/menu.png" />
                </ImageView>
                <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../../drawable/face.png" />
                </ImageView>
            </HBox>
        </right>
    </BorderPane>
    <VBox prefWidth="200.0" spacing="30.0" VBox.vgrow="ALWAYS">
        <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
        </padding>
        <BorderPane prefHeight="100.0">
            <left>
                <Button maxHeight="100.0" maxWidth="200.0" minHeight="80.0" minWidth="80.0" prefHeight="100.0" prefWidth="200.0" text="FILTRAR" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="36.0" />
               </font></Button>
            </left>
            <center>
                <HBox alignment="CENTER" spacing="20.0">
                    <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../../drawable/search.png"/>
                    </ImageView>
                    <TextArea />
                </HBox>
            </center>
            <right>
                <Button maxHeight="100.0" maxWidth="100.0" minHeight="80.0" minWidth="80.0" prefHeight="100.0" prefWidth="100.0" text="+">
               <font>
                  <Font name="System Bold" size="45.0" />
               </font></Button>
            </right>
        </BorderPane>
        <HBox spacing="30.0" VBox.vgrow="ALWAYS">
            <VBox style="-fx-background-color: red;" HBox.hgrow="ALWAYS">

            </VBox>
            <ScrollPane style="-fx-background-color: red;" HBox.hgrow="ALWAYS">

            </ScrollPane>
        </HBox>
    </VBox>
</VBox>
