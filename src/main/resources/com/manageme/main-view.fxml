<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<VBox minHeight="600" minWidth="800" prefHeight="1080" prefWidth="1920" stylesheets="@styles/main-style.css"
      xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.manageme.controllers.MainController">
    <HBox style="-fx-background-color: cyan;">
        <padding>
            <Insets top="20" bottom="20" left="20" right="20"/>
        </padding>
        <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../../drawable/logo_dev.png" />
        </ImageView>
        <Label fx:id="username">
            <font>
                <Font size="25"/>
            </font>
        </Label>
        <Region HBox.hgrow="ALWAYS"/>
        <HBox spacing="25.0" style="-fx-background-color: green;">
            <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../../drawable/notifications.png" />
            </ImageView>
            <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true" onMouseClicked="#onHelpClicked">
                <Image url="@../../drawable/help.png" />
            </ImageView>
            <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../../drawable/menu.png" />
            </ImageView>
            <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../../drawable/face.png" />
            </ImageView>
        </HBox>
    </HBox>
    <VBox spacing="30.0" VBox.vgrow="ALWAYS">
        <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
        </padding>
        <HBox>
            <Button prefHeight="50.0" prefWidth="200.0" text="FILTRAR" textAlignment="CENTER">
            <font>
              <Font name="System Bold" size="30.0" />
            </font></Button>
            <Region HBox.hgrow="ALWAYS"/>
            <HBox alignment="CENTER" spacing="20.0">
                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../../drawable/search.png"/>
                </ImageView>
                <TextField VBox.vgrow="ALWAYS">
                    <font>
                        <Font size="20"/>
                    </font>
                </TextField>
            </HBox>
            <Region HBox.hgrow="ALWAYS"/>
            <Button prefHeight="50.0" prefWidth="50.0" text="+">
            <font>
              <Font name="System Bold" size="30.0" />
            </font></Button>
        </HBox>
        <HBox spacing="30.0" VBox.vgrow="ALWAYS">
            <VBox style="-fx-background-color: red;" spacing="20" styleClass="categoriesMenu" alignment="CENTER">
                <HBox spacing="20">
                    <Button text="Carne" styleClass="categoryButton"/>
                    <Button text="Carne" styleClass="categoryButton"/>
                    <Button text="Carne" styleClass="categoryButton"/>
                </HBox>
                <HBox spacing="20">
                    <Button text="Carne" styleClass="categoryButton"/>
                    <Button text="Carne" styleClass="categoryButton"/>
                    <Button text="Carne" styleClass="categoryButton"/>
                </HBox>
                <HBox spacing="20">
                    <Button text="Carne" styleClass="categoryButton"/>
                    <Button text="Carne" styleClass="categoryButton"/>
                    <Button text="Carne" styleClass="categoryButton"/>
                </HBox>
                <HBox spacing="20">
                    <Button text="Carne" styleClass="categoryButton"/>
                    <Button text="Carne" styleClass="categoryButton"/>
                    <Button text="Carne" styleClass="categoryButton"/>
                </HBox>
            </VBox>
            <ScrollPane style="-fx-background-color: red;" HBox.hgrow="ALWAYS">

            </ScrollPane>
        </HBox>
    </VBox>
</VBox>
